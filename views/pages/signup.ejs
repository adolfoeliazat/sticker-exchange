  			  			</fieldset>
  			  			
  			  			<fieldset class="form-group" style="margin-bottom: 0">
		  					<label for="formUserPasswordRepeat"></label>
    			  			<input type="password" class="form-control" style="width: 50%; margin: 0 auto; margin-top:10px;" id="formUserPasswordRepeat" name="retypepassword" placeholder="Retype Password" required>
  			  			</fieldset>						
							
